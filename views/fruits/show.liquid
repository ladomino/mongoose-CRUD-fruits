{% layout "layout.liquid" %} 
{% block content %}
      <div class="container-md">
        <!-- <article style="background-color: {{fruit.color}}"> -->
        <article>
          <h2>
            {{ fruit.name }} -
            
            {% if readyToEat == true %}
            Ready to Eat
            {% else %}
            Not Ready to Eat
            {% endif %}
          </h2>
          <h3>{{ fruit.color }}</h3>
          <a href="/fruits/{{ fruit._id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/fruits/{{ fruit._id }}?_method=DELETE" method="POST">
            <input class="btn btn-danger" type="submit" value="Delete" />
          </form>
          <a href="/fruits/"><button>Back to Main</button></a>
        </article>
      </div>
{% endblock %}