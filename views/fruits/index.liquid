<!-- We are serving block content in layout.liquid so we need to inform all
our bloocks(files) -->
{% layout 'layout.liquid' %}
<!-- here we start our block content -->
{% block content %}
    <div>
    <a href="/fruits/new"><button>Create A New Fruit</button></a>
    {% for fruit in fruits %}
        <article>
            <!-- this is the database id called _id -->
            <a href="/fruits/{{ fruit.id }}">
                <h2> 
                    {{ fruit.name }}
                    {% if fruit.readyToEat %}
                    Ripe
                    {% else %}
                    Not Ripe
                    {% endif %}
                </h2>
            </a>
        </article>
    {% endfor %}

    </div>
{% endblock %}